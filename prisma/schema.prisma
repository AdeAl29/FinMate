generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // When using PgBouncer/connection pooling in serverless, use DATABASE_URL for runtime,
  // and DIRECT_URL for migrations/DDL (direct connection).
  directUrl = env("DIRECT_URL")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum Language {
  EN
  ID
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  username      String
  passwordHash  String
  currency      String       @default("USD")
  language      Language     @default(EN)
  darkMode      Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  transactions  Transaction[]
  categories    Category[]
  savingsGoals  SavingsGoal[]
}

model Transaction {
  id        String          @id @default(cuid())
  title     String
  amount    Decimal         @db.Decimal(12, 2)
  category  String
  type      TransactionType
  date      DateTime
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  userId    String
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@index([userId, category])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
}

model SavingsGoal {
  id           String   @id @default(cuid())
  title        String
  targetAmount Decimal  @db.Decimal(12, 2)
  savedAmount  Decimal  @default(0) @db.Decimal(12, 2)
  targetDate   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
